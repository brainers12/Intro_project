<div class="container mt-5">
 # <!-- Search Bar -->
#   index.html.erb
  <div class="row justify-content-center mb-4">
    <div class="col-md-6">
      <%= form_with(url: coins_path, method: "get", local: true) do %>
        <div class="input-group">
          <%= search_field_tag :search, params[:search], placeholder: "Search Coins", class: "form-control" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "btn btn-outline-secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

 # <!-- Navigation link-->
  <div class="row justify-content-center mb-4">
    <div class="col-md-8 d-flex justify-content-around">
      <%= link_to 'Homepage', root_path, class: 'btn btn-outline-primary' %>
      <%= link_to 'About', about_path, class: 'btn btn-outline-primary' %>
      <%= link_to 'Coin Prices', menu_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
 
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <th>Market Cap</th>
      <th></th> <!-- Placeholder for Show link -->
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.name %></td>
        <td><%= coin.symbol %></td>
        <td><%= coin.coin_detail&.price %></td>
        <td><%= coin.coin_detail&.market_cap %></td>
        <td><%= link_to 'Show', coin_path(coin) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

#Pagination added
<%= paginate @coins %>

